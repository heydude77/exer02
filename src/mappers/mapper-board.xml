<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<insert id="addDataUsingMap" parameterType="java.util.HashMap">
		insert into board values(board_seq.nextval, #{writer}, #{title}, sysdate, #{content}, 0, #{attach})
	</insert>
	
	<update id="addGood" parameterType="java.lang.Number">
		 update board set good = good+1 where no=#{no}  
	</update>
	

	<select id="getAllDataUsingMap" resultType="java.util.HashMap" >
		select * from board order by no desc
	</select>
	
	<select id="getPlayers" resultType="java.lang.String" >
		select distinct player from board order by player asc
	</select>
	
	<select id="getContent" resultType="java.lang.String" >
		select content from board where no=#{no}
	</select>
	
	<select id="getOneResultByNumber" resultType="java.util.HashMap" parameterType="java.lang.Number" >
		select * from board where no=#{no}
	</select>
	
	<select id="getOneDataUsingMap" resultType="java.util.HashMap" parameterType="java.lang.String" >
		select * from board where serial=#{serial}
	</select>
	
	
	
</mapper>